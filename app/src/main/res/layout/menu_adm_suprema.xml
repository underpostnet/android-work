<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <Button
        android:id="@+id/menu_adm_capture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Capturar Foto" />
    <Button
        android:id="@+id/menu_adm_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Listado de Conserjes" />  <!-- nombre foto cargo sonido -->
    <Button
        android:id="@+id/menu_adm_gfx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Grafico Conserjes" /> <!-- favoritos -->
</LinearLayout>
